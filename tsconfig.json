{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "declaration": true,
    "lib": ["es2017", "es7", "dom"],
    "module": "CommonJS",
    "target": "es2017",
    "allowJs": true,
    "importsNotUsedAsValues": "preserve",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules/**/*", "dist/**/*"]
}
